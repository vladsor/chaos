# $chaos: Conscript,v 1.2 2002/07/21 12:49:41 per Exp $ -*- Perl -*-

# Abstract: CONS script for the filesystem library.
# Author: Per Lundberg <per@chaosdev.org>

# Copyright 2002 chaos development.
# Use freely under the terms listed in the file COPYING.

$library_binary = 'libfilesystem.a';

Import qw(cons library_static_directory);
Library $cons $library_binary, 'filesystem.c';
Command $cons 'install', $library_binary,
  qq(mkdir -p $library_static_directory
     install filesystem/$library_binary $library_static_directory);

# FIXME: Install headers also. We don't need it yet though.
