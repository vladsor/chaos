# This makefile was generated by autochaos 0.2.1. Please do not
# tamper with it unless you are very certain about what you are doing.

ALL_ARGUMENTS = 

PREFIX = /mnt/chaos
PACKAGE = string

# Compiler flags.

CFLAGS = -Wall -W -Wshadow -Wpointer-arith -Waggregate-return \
-Wstrict-prototypes -Wredundant-decls -Winline -Wmissing-prototypes \
-Werror -Wcast-align -Wbad-function-cast -Wsign-compare \
-Wmissing-declarations -Wmissing-noreturns -pipe \
-Wnested-externs -O3 -fno-builtin -funsigned-char -g $(EXTRA_CFLAGS) $(DEFINES)

INCLUDES = \
-I.. \
-I. -I$(PREFIX)/data/programming/c/headers

ALL_OBJECTS = \
./string.o \
./arguments.o

STATIC_LIBRARY_PATH = $(PREFIX)/data/programming/libraries/static

# Ideally, this would be -lwhatever, but we have not started patching
# the GNU tools yet...

LIBS = 

OBJECTS =  \
string.o \
arguments.o


HEADERS =  \
string.h \
return_values.h \
defines.h \
inlines.h \
functions.h


SOURCES =  \
string.c \
arguments.c

HEADER_PATH = $(PREFIX)/data/programming/c/headers/$(PACKAGE)/.

# TODO: Those should be overridable.

CC = gcc
NASM = nasm
AR = ar
RANLIB = ranlib
GZIP = gzip -f

%.o: %.c
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.S
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.asm
	$(NASM) -o $(@) $< -f elf

.PHONY: splash all clean install package-source package-check package

all: splash makefile library_string.a

clean:
	rm -f library_string.a
	rm -f $(OBJECTS)
	rm -f *.dep
	-$(MAKE) clean-local
makefile: configure
	@./configure

splash:
	@echo -e "\n  Compiling library: string...\n"

configure: autochaos.rules
	@autochaos


LDFLAGS = $(PREFIX)/data/programming/c/startup/startup.o \
-nostdlib -Wl,-T,$(PREFIX)/data/programming/linker/chaos.ld -lgcc $(EXTRA_LDFLAGS)

library_string.a: $(OBJECTS)
	@echo "Creating library..."
	@$(AR) cru $(@) $(OBJECTS)
	@$(RANLIB) $(@)

install: all
	@echo "Installing..."
	@mkdir -p $(PREFIX)/data/programming/libraries/static
	@cp library_string.a $(PREFIX)/data/programming/libraries/static
	@mkdir -p $(PREFIX)/data/programming/c/headers/$(PACKAGE)
	@for header in $(HEADERS) ; do cp $$header $(PREFIX)/data/programming/c/headers/$(PACKAGE) ; done

package-source:
	mkdir -p /root/Development/chaos.my/libraries/string/package-source/.
	-cp -f autochaos.rules changelog configure COPYING README AUTHORS TODO INSTALL /root/Development/chaos.my/libraries/string/package-source/.
	-cp -f makefile.template $(EXTRA_FILES) /root/Development/chaos.my/libraries/string/package-source/.
	for header in $(HEADERS) ; do cp $$header /root/Development/chaos.my/libraries/string/package-source/. || exit ; done
	for source in $(SOURCES) ; do cp $$source /root/Development/chaos.my/libraries/string/package-source/. || exit ; done
package-check: package-source
	     cd package-source && ./configure $(ALL_ARGUMENTS) && $(MAKE) && $(MAKE) clean
	     find package-source -name makefile -exec rm {} ';'
	     rm package-source/config.h
package: package-check
	rm -rf string-0.0.1
	mv package-source string-0.0.1
	tar cvIf string-0.0.1.tar.bz2 string-0.0.1
	     
-include string.dep
-include arguments.dep

