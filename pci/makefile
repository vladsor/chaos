# This makefile was generated by autochaos 0.2.0. Please do not
# tamper with it unless you are very certain about what you are doing.

ALL_ARGUMENTS = 

PREFIX = /mnt/chaos
PACKAGE = pci

# Compiler flags.

CFLAGS = -Wall -W -Wshadow -Wpointer-arith -Waggregate-return \
-Wstrict-prototypes -Wredundant-decls -Winline -Wmissing-prototypes \
-Werror -Wcast-align -Wbad-function-cast -Wsign-compare \
-Wmissing-declarations -Wmissing-noreturns -pipe \
-Wnested-externs -O3 -fno-builtin -funsigned-char -g $(EXTRA_CFLAGS) $(DEFINES)

INCLUDES = \
-I. -I$(PREFIX)/data/programming/c/headers

ALL_OBJECTS = \
./pci.o \
./pci-id.o

STATIC_LIBRARY_PATH = $(PREFIX)/data/programming/libraries/static

# Ideally, this would be -lwhatever, but we have not started patching
# the GNU tools yet...

LIBS = \
$(STATIC_LIBRARY_PATH)/library_ipc.a \
$(STATIC_LIBRARY_PATH)/library_string.a \
$(STATIC_LIBRARY_PATH)/library_system.a \
$(STATIC_LIBRARY_PATH)/library_list.a \
$(STATIC_LIBRARY_PATH)/library_memory.a 

OBJECTS =  \
pci.o \
pci-id.o


SOURCES =  \
pci.c \
pci-id.c

HEADER_PATH = $(PREFIX)/data/programming/c/headers/$(PACKAGE)/.

# TODO: Those should be overridable.

CC = gcc
NASM = nasm
AR = ar
RANLIB = ranlib
GZIP = gzip -f

%.o: %.c
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.S
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.asm
	$(NASM) -o $(@) $< -f elf

.PHONY: splash all clean install package-source package-check package

all: splash makefile pci

clean: makefile
	rm -f pci
	rm -f $(OBJECTS)
	rm -f *.dep
	-$(MAKE) clean-local
makefile: configure
	@./configure

splash:
	@echo -e "\n  Compiling server: pci...\n"

configure: autochaos.rules
	@autochaos


LDFLAGS = $(PREFIX)/data/programming/c/startup/startup.o \
-nostdlib -Wl,-T,$(PREFIX)/data/programming/linker/chaos.ld -lgcc $(EXTRA_LDFLAGS)

pci: $(OBJECTS)
	@echo "Linking..."
	@$(CC) -o $(@) $(OBJECTS) $(LIBS) $(LDFLAGS)

install: all
	@echo "Installing..."
	@mkdir -p $(PREFIX)/system/servers
	@cp pci $(PREFIX)/system/servers
	@strip -R .note -R .comment -R .eh_frame $(PREFIX)/system/servers/pci
	@$(GZIP) $(PREFIX)/system/servers/pci # > $(PREFIX)/system/servers/pci.gz

package-source:
	mkdir -p /root/Development/chaos.n2/servers/system/pci.r1/package-source/.
	-cp -f autochaos.rules changelog configure COPYING README AUTHORS TODO INSTALL /root/Development/chaos.n2/servers/system/pci.r1/package-source/.
	-cp -f makefile.template $(EXTRA_FILES) /root/Development/chaos.n2/servers/system/pci.r1/package-source/.
	for source in $(SOURCES) ; do cp $$source /root/Development/chaos.n2/servers/system/pci.r1/package-source/. || exit ; done
package-check: package-source
	     cd package-source && ./configure $(ALL_ARGUMENTS) && $(MAKE) && $(MAKE) clean
	     find package-source -name makefile -exec rm {} ';'
	     rm package-source/config.h
package: package-check
	rm -rf pci-0.0.1
	mv package-source pci-0.0.1
	tar cvIf pci-0.0.1.tar.bz2 pci-0.0.1
	     
-include pci.dep
-include pci-id.dep

# pci-id.c is automatically generated.

pci-id.c: pci.h pci.pl pci.ids
	./pci.pl
