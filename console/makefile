# This makefile was generated by autochaos 0.2.1. Please do not
# tamper with it unless you are very certain about what you are doing.

ALL_ARGUMENTS = 

PREFIX = /mnt/chaos
PACKAGE = console

# Compiler flags.

CFLAGS = -Wall -W -Wshadow -Wpointer-arith -Waggregate-return \
-Wstrict-prototypes -Wredundant-decls -Winline -Wmissing-prototypes \
-Werror -Wcast-align -Wbad-function-cast -Wsign-compare \
-Wmissing-declarations -Wmissing-noreturns -pipe \
-Wnested-externs -O3 -fno-builtin -funsigned-char -g $(EXTRA_CFLAGS) $(DEFINES)

INCLUDES = \
-I. -I$(PREFIX)/data/programming/c/headers

ALL_OBJECTS = \
./connection.o \
./provider.o \
./console.o \
./console_output.o \
./charset.o

STATIC_LIBRARY_PATH = $(PREFIX)/data/programming/libraries/static

# Ideally, this would be -lwhatever, but we have not started patching
# the GNU tools yet...

LIBS = \
$(STATIC_LIBRARY_PATH)/library_ipc.a \
$(STATIC_LIBRARY_PATH)/library_string.a \
$(STATIC_LIBRARY_PATH)/library_system.a \
$(STATIC_LIBRARY_PATH)/library_video.a \
$(STATIC_LIBRARY_PATH)/library_unicode.a \
$(STATIC_LIBRARY_PATH)/library_memory.a 

OBJECTS =  \
connection.o \
provider.o \
console.o \
console_output.o \
charset.o


SOURCES =  \
connection.c \
provider.c \
console.c \
console_output.c \
charset.c

HEADER_PATH = $(PREFIX)/data/programming/c/headers/$(PACKAGE)/.

# TODO: Those should be overridable.

CC = gcc
NASM = nasm
AR = ar
RANLIB = ranlib
GZIP = gzip -f

%.o: %.c
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.S
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.asm
	$(NASM) -o $(@) $< -f elf

.PHONY: splash all clean install package-source package-check package

all: splash makefile console

clean:
	rm -f console
	rm -f $(OBJECTS)
	rm -f *.dep
	-$(MAKE) clean-local
makefile: configure
	@./configure

splash:
	@echo -e "\n  Compiling server: console...\n"

configure: autochaos.rules
	@autochaos


LDFLAGS = $(PREFIX)/data/programming/c/startup/startup.o \
-nostdlib -Wl,-T,$(PREFIX)/data/programming/linker/chaos.ld -lgcc $(EXTRA_LDFLAGS)

console: $(OBJECTS)
	@echo "Linking..."
	@$(CC) -o $(@) $(OBJECTS) $(LIBS) $(LDFLAGS)

install: all
	@echo "Installing..."
	@mkdir -p $(PREFIX)/system/servers
	@cp console $(PREFIX)/system/servers
	@strip -R .note -R .comment -R .eh_frame $(PREFIX)/system/servers/console
	@$(GZIP) $(PREFIX)/system/servers/console # > $(PREFIX)/system/servers/console.gz

package-source:
	mkdir -p /root/Development/chaos.my/console/package-source/.
	-cp -f autochaos.rules changelog configure COPYING README AUTHORS TODO INSTALL /root/Development/chaos.my/console/package-source/.
	-cp -f makefile.template $(EXTRA_FILES) /root/Development/chaos.my/console/package-source/.
	for source in $(SOURCES) ; do cp $$source /root/Development/chaos.my/console/package-source/. || exit ; done
package-check: package-source
	     cd package-source && ./configure $(ALL_ARGUMENTS) && $(MAKE) && $(MAKE) clean
	     find package-source -name makefile -exec rm {} ';'
	     rm package-source/config.h
package: package-check
	rm -rf console-0.0.2
	mv package-source console-0.0.2
	tar cvIf console-0.0.2.tar.bz2 console-0.0.2
	     
-include connection.dep
-include provider.dep
-include console.dep
-include console_output.dep
-include charset.dep

