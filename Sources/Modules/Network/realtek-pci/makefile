HEADER_PATH = $(PREFIX)/data/programming/c/headers/$(PACKAGE)/ia32

# TODO: Those should be overridable.

CC = gcc
NASM = nasm
AR = ar
RANLIB = ranlib
GZIP = gzip -f

%.o: %.c
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<

%.o: %.S
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.asm
	$(NASM) -o $(@) $< -f elf

.PHONY: splash all clean install package-source package-check package


all: splash makefile  $(OBJECTS)

clean:
	rm -f $(OBJECTS)
	rm -f *.dep
	rm -f realtek-pci.a
	
splash:


realtek-pci.a: $(OBJECTS)
	@echo "Linking..."
	ar cru $(@) $(OBJECTS) $(LIBS)
	ranlib $(@)

realtek-pci.so: $(MOBJECTS)
	@echo "Linking..."
	ld -o $(@) -shared $(MOBJECTS) $(MLIBS)

all: realtek-pci.a realtek-pci.so

rall: clean all

install: all

