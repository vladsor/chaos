# Use freely under the terms listed in the file COPYING.

Import qw(cons header_directory build_directory);

$headers = qq(halt.h lock.h memory.h memory_global.h port.h service.h types.h);

Command $cons 'install', $build_directory . "/source/ia32/stormG3",
  qq(mkdir -p $header_directory/storm/ia32
     for e in $headers ; do install include/storm/ia32/\$e $header_directory/storm/ia32 || exit ; done)
