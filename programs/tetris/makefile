# This makefile was generated by autochaos 0.1.0. Please do not
# tamper with it unless you are very certain about what you are doing.

PREFIX = /mnt/chaos
PACKAGE = tetris

# Compiler flags.

CFLAGS = -W -Wshadow -Wpointer-arith -Waggregate-return \
-Wstrict-prototypes -Wredundant-decls -Winline -Wmissing-prototypes \
-Werror -Wcast-align -Wbad-function-cast -Wsign-compare \
-Wmissing-declarations -Wmissing-noreturns -pipe \
-Wnested-externs -O3 -fno-builtin -funsigned-char -g $(EXTRA_CFLAGS) $(DEFINES)

INCLUDES = \
-I. -I$(PREFIX)/data/programming/c/headers

ALL_OBJECTS = \
./main.o \
./tetris.o

STATIC_LIBRARY_PATH = $(PREFIX)/data/programming/libraries/static

# Ideally, this would be -lwhatever, but we have not started patching
# the GNU tools yet...

LIBS = \
$(STATIC_LIBRARY_PATH)/library_random.a \
$(STATIC_LIBRARY_PATH)/library_console.a \
$(STATIC_LIBRARY_PATH)/library_ipc.a \
$(STATIC_LIBRARY_PATH)/library_system.a \
$(STATIC_LIBRARY_PATH)/library_string.a \
$(STATIC_LIBRARY_PATH)/library_memory.a 

OBJECTS =  \
main.o \
tetris.o


SOURCES =  \
main.c \
tetris.c

HEADER_PATH = $(PREFIX)/data/programming/c/headers/$(PACKAGE)/.

# TODO: Those should be overridable.

CC = gcc
NASM = nasm
AR = ar
RANLIB = ranlib
GZIP = gzip -f

%.o: %.c
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.S
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.asm
	$(NASM) -o $(@) $< -f elf

.PHONY: splash all clean install package-source

all: splash makefile tetris

clean: makefile
	rm -f tetris
	rm -f $(OBJECTS)
	rm -f *.dep
	-$(MAKE) clean-local
makefile: configure
	@./configure

splash:
	@echo -e "\n  Compiling program: tetris...\n"

configure: autochaos.rules
	@autochaos


LDFLAGS = $(PREFIX)/data/programming/c/startup/startup.o \
-nostdlib -Wl,-T,$(PREFIX)/data/programming/linker/chaos.ld -lgcc

tetris: $(OBJECTS)
	@echo "Linking..."
	@$(CC) -o $(@) $(OBJECTS) $(LIBS) $(LDFLAGS)

install: all
	mkdir -p $(PREFIX)/programs/tetris
	cp tetris $(PREFIX)/programs/tetris/tetris
	strip -R .note -R .comment -R .eh_frame $(PREFIX)/programs/tetris/tetris
	$(GZIP) $(PREFIX)/programs/tetris/tetris # > $(PREFIX)/programs/tetris/tetris.gz

package-source:
	mkdir -p /usr/home/plundis/chaos/programs/tetris/package-source/.
	-cp -f autochaos.rules changelog configure README AUTHORS TODO INSTALL /usr/home/plundis/chaos/programs/tetris/package-source/.
	-cp -f makefile.template $(EXTRA_FILES) /usr/home/plundis/chaos/programs/tetris/package-source/.
	for source in $(SOURCES) ; do cp $$source /usr/home/plundis/chaos/programs/tetris/package-source/. ; done
package-check: package-source
	     cd package-source && ./configure && $(MAKE) && $(MAKE) clean
	     find package-source -name makefile -exec rm {} ';'
	     rm package-source/config.h
package: package-check
	rm -rf tetris-0.0.1
	mv package-source tetris-0.0.1
	tar cvIf tetris-0.0.1.tar.bz2 tetris-0.0.1
	     
-include main.dep
-include tetris.dep

