ALL_ARGUMENTS = 

PREFIX = /mnt/chaos
PACKAGE = virtual_file_system

# Compiler flags.

CFLAGS = -Wall -W -Wshadow -Wpointer-arith -Waggregate-return \
-Wstrict-prototypes -Wredundant-decls -Winline -Wmissing-prototypes \
-Werror -Wcast-align -Wbad-function-cast -Wmissing-noreturns -Wsign-compare \
-Wmissing-declarations -pipe \
-Wnested-externs -O3 -fno-builtin -funsigned-char -g $(EXTRA_CFLAGS) $(DEFINES)

INCLUDES = \
-I. -I$(PREFIX)/data/programming/c/headers

ALL_OBJECTS = \
./virtual_file_system.o

STATIC_LIBRARY_PATH = $(PREFIX)/data/programming/libraries/static

# Ideally, this would be -lwhatever, but we have not started patching
# the GNU tools yet...

LIBS = \
$(STATIC_LIBRARY_PATH)/library_ipc.a \
$(STATIC_LIBRARY_PATH)/library_log.a \
$(STATIC_LIBRARY_PATH)/library_string.a \
$(STATIC_LIBRARY_PATH)/library_system.a \
$(STATIC_LIBRARY_PATH)/library_memory.a 

OBJECTS =  \
virtual_file_system.o


SOURCES =  \
virtual_file_system.c

HEADER_PATH = $(PREFIX)/data/programming/c/headers/$(PACKAGE)/.

# TODO: Those should be overridable.

CC = gcc
NASM = nasm
AR = ar
RANLIB = ranlib
GZIP = gzip -f

%.o: %.c
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.S
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.asm
	$(NASM) -o $(@) $< -f elf

.PHONY: splash all clean install package-source

all: splash makefile virtual_file_system

clean: makefile
	rm -f virtual_file_system
	rm -f $(OBJECTS)
	rm -f *.dep
	-$(MAKE) clean-local
makefile: configure
	@./configure

splash:
	@echo -e "\n  Compiling server: virtual_file_system...\n"

configure: autochaos.rules
	@autochaos


LDFLAGS = $(PREFIX)/data/programming/c/startup/startup.o \
-nostdlib -Wl,-T,$(PREFIX)/data/programming/linker/chaos.ld -lgcc $(EXTRA_LDFLAGS)

virtual_file_system: $(OBJECTS)
	@echo "Linking..."
	@$(CC) -o $(@) $(OBJECTS) $(LIBS) $(LDFLAGS)

install: all
	mkdir -p $(PREFIX)/system/servers
	cp virtual_file_system $(PREFIX)/system/servers
	strip -R .note -R .comment -R .eh_frame $(PREFIX)/system/servers/virtual_file_system
	$(GZIP) $(PREFIX)/system/servers/virtual_file_system # > $(PREFIX)/system/servers/virtual_file_system.gz

package-source:
	mkdir -p /root/Development/chaos/servers/file_system/virtual_file_system/package-source/.
	-cp -f autochaos.rules changelog configure README AUTHORS TODO INSTALL /root/Development/chaos/servers/file_system/virtual_file_system/package-source/.
	-cp -f makefile.template $(EXTRA_FILES) /root/Development/chaos/servers/file_system/virtual_file_system/package-source/.
	for source in $(SOURCES) ; do cp $$source /root/Development/chaos/servers/file_system/virtual_file_system/package-source/. ; done
package-check: package-source
	     cd package-source && ./configure $(ALL_ARGUMENTS) && $(MAKE) && $(MAKE) clean
	     find package-source -name makefile -exec rm {} ';'
	     rm package-source/config.h
package: package-check
	rm -rf virtual_file_system-0.0.1
	mv package-source virtual_file_system-0.0.1
	tar cvIf virtual_file_system-0.0.1.tar.bz2 virtual_file_system-0.0.1
	     
-include virtual_file_system.dep

