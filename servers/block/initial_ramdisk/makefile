# This makefile was generated by autochaos 0.2.0. Please do not
# tamper with it unless you are very certain about what you are doing.

ALL_ARGUMENTS = 

PREFIX = /mnt/chaos
PACKAGE = initial_ramdisk

# Compiler flags.

CFLAGS = -Wall -W -Wshadow -Wpointer-arith -Waggregate-return \
-Wstrict-prototypes -Wredundant-decls -Winline -Wmissing-prototypes \
-Werror -Wcast-align -Wbad-function-cast -Wmissing-noreturns -Wsign-compare \
-Wmissing-declarations -pipe \
-Wnested-externs -O3 -fno-builtin -funsigned-char -g $(EXTRA_CFLAGS) $(DEFINES)

INCLUDES = \
-I. -I$(PREFIX)/data/programming/c/headers

ALL_OBJECTS = \
./initial_ramdisk.o \
./ramdisk.o

STATIC_LIBRARY_PATH = $(PREFIX)/data/programming/libraries/static

# Ideally, this would be -lwhatever, but we have not started patching
# the GNU tools yet...

LIBS = \
$(STATIC_LIBRARY_PATH)/library_ipc.a \
$(STATIC_LIBRARY_PATH)/library_log.a \
$(STATIC_LIBRARY_PATH)/library_memory.a \
$(STATIC_LIBRARY_PATH)/library_string.a \
$(STATIC_LIBRARY_PATH)/library_system.a 

OBJECTS =  \
initial_ramdisk.o \
ramdisk.o


SOURCES =  \
initial_ramdisk.c \
ramdisk.asm

HEADER_PATH = $(PREFIX)/data/programming/c/headers/$(PACKAGE)/.

# TODO: Those should be overridable.

CC = gcc
NASM = nasm
AR = ar
RANLIB = ranlib
GZIP = gzip -f

%.o: %.c
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.S
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.asm
	$(NASM) -o $(@) $< -f elf

.PHONY: splash all clean install package-source

all: splash makefile initial_ramdisk

clean: makefile
	rm -f initial_ramdisk
	rm -f $(OBJECTS)
	rm -f *.dep
	-$(MAKE) clean-local
makefile: configure
	@./configure

splash:
	@echo -e "\n  Compiling server: initial_ramdisk...\n"

configure: autochaos.rules
	@autochaos


LDFLAGS = $(PREFIX)/data/programming/c/startup/startup.o \
-nostdlib -Wl,-T,$(PREFIX)/data/programming/linker/chaos.ld -lgcc $(EXTRA_LDFLAGS)

initial_ramdisk: $(OBJECTS)
	@echo "Linking..."
	@$(CC) -o $(@) $(OBJECTS) $(LIBS) $(LDFLAGS)

install: all
	mkdir -p $(PREFIX)/system/servers
	cp initial_ramdisk $(PREFIX)/system/servers
	strip -R .note -R .comment -R .eh_frame $(PREFIX)/system/servers/initial_ramdisk
	$(GZIP) $(PREFIX)/system/servers/initial_ramdisk # > $(PREFIX)/system/servers/initial_ramdisk.gz

package-source:
	mkdir -p /root/Development/chaos/servers/block/initial_ramdisk/package-source/.
	-cp -f autochaos.rules changelog configure README AUTHORS TODO INSTALL /root/Development/chaos/servers/block/initial_ramdisk/package-source/.
	-cp -f makefile.template $(EXTRA_FILES) /root/Development/chaos/servers/block/initial_ramdisk/package-source/.
	for source in $(SOURCES) ; do cp $$source /root/Development/chaos/servers/block/initial_ramdisk/package-source/. ; done
package-check: package-source
	     cd package-source && ./configure $(ALL_ARGUMENTS) && $(MAKE) && $(MAKE) clean
	     find package-source -name makefile -exec rm {} ';'
	     rm package-source/config.h
package: package-check
	rm -rf initial_ramdisk-0.0.1
	mv package-source initial_ramdisk-0.0.1
	tar cvIf initial_ramdisk-0.0.1.tar.bz2 initial_ramdisk-0.0.1
	     
-include initial_ramdisk.dep
-include ramdisk.dep

# Local rules.

ramdisk-auto.h: ramdisk.pl ramdisk.image
	./ramdisk.pl ramdisk.image > $(@)

ramdisk.o: ramdisk.image

initial_ramdisk.o: ramdisk-auto.h
