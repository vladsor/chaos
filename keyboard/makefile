# This makefile was generated by autochaos 0.2.1. Please do not
# tamper with it unless you are very certain about what you are doing.

ALL_ARGUMENTS = --install-prefix /mnt/chaos 

PREFIX = /mnt/chaos
PACKAGE = keyboard

# Compiler flags.

CFLAGS = -Wall -W -Wshadow -Wpointer-arith -Waggregate-return \
-Wstrict-prototypes -Wredundant-decls -Winline -Wmissing-prototypes \
-Werror -Wcast-align -Wbad-function-cast -Wsign-compare \
-Wmissing-declarations -Wmissing-noreturns -pipe \
-Wnested-externs -O3 -fno-builtin -funsigned-char -g $(EXTRA_CFLAGS) $(DEFINES)

INCLUDES = \
-I. -I$(PREFIX)/data/programming/c/headers

ALL_OBJECTS = \
./common.o \
./controller.o \
./init.o \
./keyboard.o \
./mouse.o

STATIC_LIBRARY_PATH = $(PREFIX)/data/programming/libraries/static

# Ideally, this would be -lwhatever, but we have not started patching
# the GNU tools yet...

LIBS = \
$(STATIC_LIBRARY_PATH)/library_ipc.a \
$(STATIC_LIBRARY_PATH)/library_log.a \
$(STATIC_LIBRARY_PATH)/library_system.a \
$(STATIC_LIBRARY_PATH)/library_console.a \
$(STATIC_LIBRARY_PATH)/library_string.a \
$(STATIC_LIBRARY_PATH)/library_memory.a 

OBJECTS =  \
common.o \
controller.o \
init.o \
keyboard.o \
mouse.o


SOURCES =  \
common.c \
controller.c \
init.c \
keyboard.c \
mouse.c

HEADER_PATH = $(PREFIX)/data/programming/c/headers/$(PACKAGE)/.

# TODO: Those should be overridable.

CC = gcc
NASM = nasm
AR = ar
RANLIB = ranlib
GZIP = gzip -f

%.o: %.c
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.S
	@echo Compiling $<...
	@$(CC) -o $(@) $(CFLAGS) $(INCLUDES) $(DEFS) -c $<
	@$(CC) -M $< $(CFLAGS) $(INCLUDES) $(DEFS) > $(*F).dep

%.o: %.asm
	$(NASM) -o $(@) $< -f elf

.PHONY: splash all clean install package-source package-check package

all: splash makefile keyboard

clean:
	rm -f keyboard
	rm -f $(OBJECTS)
	rm -f *.dep
	-$(MAKE) clean-local
makefile: configure
	@./configure

splash:
	@echo -e "\n  Compiling server: keyboard...\n"

configure: autochaos.rules
	@autochaos


LDFLAGS = $(PREFIX)/data/programming/c/startup/startup.o \
-nostdlib -Wl,-T,$(PREFIX)/data/programming/linker/chaos.ld -lgcc $(EXTRA_LDFLAGS)

keyboard: $(OBJECTS)
	@echo "Linking..."
	@$(CC) -o $(@) $(OBJECTS) $(LIBS) $(LDFLAGS)

install: all
	@echo "Installing..."
	@mkdir -p $(PREFIX)/system/servers
	@cp keyboard $(PREFIX)/system/servers
	@strip -R .note -R .comment -R .eh_frame $(PREFIX)/system/servers/keyboard
	@$(GZIP) $(PREFIX)/system/servers/keyboard # > $(PREFIX)/system/servers/keyboard.gz

package-source:
	mkdir -p /root/Development/chaos.n3/servers/system/keyboard/package-source/.
	-cp -f autochaos.rules changelog configure COPYING README AUTHORS TODO INSTALL /root/Development/chaos.n3/servers/system/keyboard/package-source/.
	-cp -f makefile.template $(EXTRA_FILES) /root/Development/chaos.n3/servers/system/keyboard/package-source/.
	for source in $(SOURCES) ; do cp $$source /root/Development/chaos.n3/servers/system/keyboard/package-source/. || exit ; done
package-check: package-source
	     cd package-source && ./configure $(ALL_ARGUMENTS) && $(MAKE) && $(MAKE) clean
	     find package-source -name makefile -exec rm {} ';'
	     rm package-source/config.h
package: package-check
	rm -rf keyboard-0.0.1
	mv package-source keyboard-0.0.1
	tar cvIf keyboard-0.0.1.tar.bz2 keyboard-0.0.1
	     
-include common.dep
-include controller.dep
-include init.dep
-include keyboard.dep
-include mouse.dep

